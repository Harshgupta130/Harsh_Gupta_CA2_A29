<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Q2"
    android:background="@color/yellow">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SURVEY\nMost Loved Category of Book"
        android:textSize="28sp"
        android:gravity="center"
        android:id="@+id/survey"
        android:textColor="@color/red"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"></TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="440dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="100dp"
        android:id="@+id/form_b"
        android:textAlignment="gravity"
        android:background="@drawable/round_corner"
        >

        <TextView
            android:id="@+id/Form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="FORM"
            android:textColor="@color/red"
            android:textSize="40sp"></TextView>

        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Form"
            android:layout_alignBottom="@+id/Form"
            android:layout_marginBottom="-65dp"
            android:hint="Name"
            android:textColor="@color/red"
            android:textSize="25sp" />

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_marginBottom="-165dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/red"
                android:textSize="25sp"></RadioButton>

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/red"
                android:textSize="25sp"></RadioButton>

            <RadioButton
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="@color/red"
                android:textSize="25sp"></RadioButton>

        </RadioGroup>

        <CheckBox
            android:id="@+id/romantic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radio"
            android:layout_alignBottom="@+id/radio"
            android:layout_marginBottom="-60dp"
            android:text="Romantic"
            android:textColor="@color/red"
            android:textSize="25sp"></CheckBox>

        <CheckBox
            android:id="@+id/fiction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/romantic"
            android:layout_alignBottom="@+id/romantic"
            android:layout_marginBottom="-40dp"
            android:text="Fiction"
            android:textColor="@color/red"
            android:textSize="25sp"></CheckBox>

        <CheckBox
            android:id="@+id/biography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fiction"
            android:layout_alignBottom="@+id/fiction"
            android:layout_marginBottom="-40dp"
            android:text="Bio-graphy"
            android:textColor="@color/red"
            android:textSize="25sp"></CheckBox>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ans"
            android:textSize="50sp"
            android:textColor="@color/red"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_centerInParent="true"></TextView>

    </RelativeLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/form_b"
        android:layout_marginLeft="130dp"
        android:text="Submit"
        android:background="@drawable/round_corner"
        android:id="@+id/button"
        android:layout_marginBottom="-60dp" />

</RelativeLayout>